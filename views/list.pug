extends layout

block content
  section.section
    .container
      h1.title.is-2=name
      .columns
        .column.is-half
          if items.length > 0
            p Your list items:
            .content
              ul
              each item in items
                li
                  a(href=`/items/edit?item=${item._id}&status=${item.status}` class=item.status)=item.text
                  span
                  a(href=`/items/${item._id}`).itemDetail (Show details)
          form(method='POST')
            .field
              label.label(for="text") Item
              .control
                input.input(type="text" name="text")
            .field
              label.label(for="description") Description
              .control
                input.input(type="text" name="description")
            .field 
              label.label(for="linkToResource") Resource Link
              p.control.has-icons-left
                input.input(type="text" name="linkToResource")
                span.icon.is-small.is-left
                  i.fa.fa-external-link
            .field
              label.label(for="youtubeVideo") Youtube Video
              p.control.has-icons-left
                input.input(type="text" name="youtubeVideo")
                span.icon.is-small.is-left
                  i.fa.fa-youtube
            .field
              .control
              button.button.is-primary(type="submit") Add Item
