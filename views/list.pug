extends layout

block content
  section.section
    .container
      h1.title.is-2=name
      .columns
        .column.is-half
          if items.length > 0
            p Your list items:
            .content
              ul
              each item in items
                li
                  a(href=`/items/edit?item=${item._id}&status=${item.status}` class=item.status)=item.text
                  span
                  a(href=`/items/${item._id}`).itemDetail   (Show details)
          form(method='POST')
            .field
              label.label(for="text") Item
              .control
                input.input(type="text" name="text")
            .field
              .control
              button.button.is-primary(type="submit") Add Item
  .modal.is-active
    .modal-background
    .modal-card
      header.modal-card-head
        p.modal-card-title Modal title
        button.delete
      section.modal-card-body
        <!-- Content ... -->

      footer.modal-card-foot
        a.button.is-success Save changes
        a.button Cancel
