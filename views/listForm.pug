extends layout

block content
  section.section
    .container
      .columns
        .column.is-half.is-offset-one-quarter
          h1.title.is-3= title
          form(method='POST')
            .field
              label.label(for="name") List Name
              .control
                input.input(type="text" name="name")
            .field
              label.label(for="mentee") Mentee Name
              .control
                input.input(type="text" name="mentee")
            .field
              .control
                button.button.is-primary(type="submit") Create
